    go: "text-sky-400 border-sky-400/20 bg-sky-400/5",
    python: "text-blue-500 border-blue-500/20 bg-blue-500/5",
    sql: "text-orange-300 border-orange-300/20 bg-orange-300/5",

    // Frontend Frameworks & Tools
    react: "text-cyan-400 border-cyan-400/20 bg-cyan-400/5",
    astro: "text-orange-500 border-orange-500/20 bg-orange-500/5",
    tailwind: "text-teal-400 border-teal-400/20 bg-teal-400/5",
    "tailwind css": "text-teal-400 border-teal-400/20 bg-teal-400/5",
    "shadcn/ui": "text-zinc-100 border-zinc-100/20 bg-zinc-100/5",
    i18next: "text-emerald-400 border-emerald-400/20 bg-emerald-400/5",
    streamlit: "text-red-400 border-red-400/20 bg-red-400/5",

    // TanStack Ecosystem
    "tanstack start": "text-teal-400 border-teal-400/30 bg-teal-400/10",
    "tanstack query": "text-rose-400 border-rose-400/20 bg-rose-400/5",
    "tanstack router": "text-emerald-400 border-emerald-400/20 bg-emerald-400/5",
    "tanstack table": "text-blue-400 border-blue-400/20 bg-blue-400/5",

    // Backend & DB
    bun: "text-amber-200 border-amber-200/20 bg-amber-200/5",
    drizzle: "text-lime-400 border-lime-400/20 bg-lime-400/5",
    sqlite: "text-sky-600 border-sky-600/20 bg-sky-600/5",
    turso: "text-cyan-300 border-cyan-300/20 bg-cyan-300/5",
    redis: "text-red-500 border-red-500/20 bg-red-500/5",
    flask: "text-zinc-400 border-zinc-400/20 bg-zinc-400/5",
    sqlalchemy: "text-red-400 border-red-400/20 bg-red-400/5",
    gunicorn: "text-green-400 border-green-400/20 bg-green-400/5",
