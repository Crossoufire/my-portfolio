    // Infrastructure & Services
    nginx: "text-emerald-600 border-emerald-600/20 bg-emerald-600/5",
    pm2: "text-violet-400 border-violet-400/20 bg-violet-400/5",
    "github pages": "text-zinc-300 border-zinc-300/20 bg-zinc-300/5",
    selenium: "text-green-500 border-green-500/20 bg-green-500/5",
    "chrome webdriver": "text-blue-400 border-blue-400/20 bg-blue-400/5",

    // APIs & Integrations
    tmdb: "text-cyan-400 border-cyan-400/20 bg-cyan-400/5",
    igdb: "text-purple-400 border-purple-400/20 bg-purple-400/5",
    hltb: "text-indigo-400 border-indigo-400/20 bg-indigo-400/5",
