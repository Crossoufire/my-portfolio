---
import {projects} from "@/data/projects";
import Layout from "@/layouts/Layout.astro";
import TechBadge from "@/components/TechBadge.astro";

export const getStaticPaths = () => projects.map((project) => {
    return {
        props: { project },
        params: { slug: project.slug },
    };
});

const { project } = Astro.props;

const statusStyles = {
    active: "bg-brand/15 text-brand border-brand/20",
    archived: "bg-muted text-muted-foreground border-border",
    private: "bg-indigo-500/15 text-indigo-400 border-indigo-500/20",
    "in-progress": "bg-yellow-500/15 text-yellow-500 border-yellow-500/20",
};
---


<Layout title={`${project.title} | Crossoufire`} description={project.description}>
    <div class="pt-32 pb-20">
        <div class="container mx-auto px-6 max-w-4xl">
            <a href="/#projects" class="inline-flex items-center text-muted-foreground hover:text-brand mb-8 transition-colors text-sm font-medium">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
                </svg>
                Back to projects
            </a>

            <div class="mb-10">
                <div class="flex flex-col md:flex-row md:items-center gap-4 mb-6">
                    <h1 class="text-4xl md:text-5xl font-bold text-foreground tracking-tight">
                        {project.title}
                    </h1>
                    {project.status &&
                        <span class={`w-fit px-3 py-1 rounded-full text-xs font-bold border ${statusStyles[project.status]}`}>
                            {project.status}
                        </span>
                    }
                </div>
                <p class="text-xl text-muted-foreground leading-relaxed">
                    {project.description}
                </p>
            </div>

            <div class="flex flex-wrap gap-4 mb-16">
                {project.url &&
                    <a
                        target="_blank"
                        href={project.url}
                        rel="noopener noreferrer"
                        class="px-6 py-2.5 bg-brand text-brand-foreground rounded-lg font-medium hover:opacity-90 transition-opacity flex items-center gap-2"
                    >
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                  d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                        </svg>
                        Live App
                    </a>
                }

                {project.github &&
                    <a
                        target="_blank"
                        href={project.github}
                        rel="noopener noreferrer"
                        class="px-6 py-2.5 bg-secondary text-secondary-foreground rounded-lg font-medium hover:bg-secondary/80 transition-colors flex items-center gap-2"
                    >
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                            <path
                                d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                        </svg>
                        View on GitHub
                    </a>

                }
            </div>

            <div class="grid md:grid-cols-[2fr_1fr] gap-12">
                <div class="space-y-12">
                    <section>
                        <h2 class="text-2xl font-bold text-foreground mb-4">
                            About
                        </h2>
                        <p class="text-muted-foreground leading-relaxed text-lg">
                            {project.longDescription}
                        </p>
                    </section>

                    {project.features.length > 0 &&
                        <section>
                            <h2 class="text-2xl font-bold text-foreground mb-4">
                                Features
                            </h2>
                            <ul class="space-y-3">
                                {project.features.map((feature) =>
                                    <li class="flex items-start gap-3 text-muted-foreground">
                                        <svg class="w-5 h-5 text-brand mt-1 shrink-0" fill="currentColor" viewBox="0 0 20 20">
                                            <path
                                                fill-rule="evenodd"
                                                d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                                                clip-rule="evenodd"
                                            />
                                        </svg>
                                        <span>{feature}</span>
                                    </li>
                                )}
                            </ul>
                        </section>
                    }
                </div>

                <div class="space-y-8">
                    <section class="bg-card border border-border rounded-xl p-6">
                        <h2 class="text-lg font-bold text-foreground mb-4">
                            Tech Stack
                        </h2>
                        <div class="flex flex-wrap gap-2">
                            {project.stack.map((tech) =>
                                <TechBadge
                                    tech={tech}
                                />
                            )}
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
</Layout>
